<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <LinearLayout
        android:background="@drawable/language_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_translate_arabian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/hiad_5_dp"
            android:paddingRight="@dimen/hiad_5_dp"
            android:paddingTop="@dimen/hiad_5_dp"
            android:paddingBottom="@dimen/hiad_5_dp"
            android:layout_margin="@dimen/hiad_3_dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="中文"
            android:textSize="@dimen/sp_12" />

        <View
            android:background="@color/color_line_gray"
            android:layout_width="wrap_content"
            android:layout_height="0.25dp"
            android:layout_marginStart="@dimen/dp_1"
            android:layout_marginEnd="@dimen/dp_1" />
    </LinearLayout>


</layout>
